<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.LoginActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="401dp"
        android:layout_height="411dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"

        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">


        <ImageButton
            android:id="@+id/drinkImgBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/text1"
            android:layout_alignStart="@+id/text1"
            android:layout_alignTop="@+id/dish1ImgBtn"
            android:background="@drawable/dish5"
            android:contentDescription="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="16pt"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/dish1ImgBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@+id/drinkImgBtn"
            android:layout_toRightOf="@+id/drinkImgBtn"
            android:background="@drawable/dish1"
            android:contentDescription="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="16pt"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/dish2ImgBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@+id/dish1ImgBtn"
            android:layout_toRightOf="@+id/dish1ImgBtn"
            android:background="@drawable/dish2"
            android:contentDescription="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="16pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/drinkImgBtn"
            android:background="@color/Honeydew"
            android:gravity="center"
            android:text="@string/dish5"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/dish1ImgBtn"
            android:layout_toEndOf="@+id/text1"
            android:layout_toRightOf="@+id/text1"
            android:background="@color/Honeydew"
            android:gravity="center"
            android:text="@string/dish1" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/dish2ImgBtn"
            android:layout_toEndOf="@id/text2"
            android:layout_toRightOf="@id/text2"
            android:background="@color/Honeydew"
            android:gravity="center"
            android:text="@string/dish2" />

        <ImageButton
            android:id="@+id/dish3ImgBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/text1"
            android:background="@drawable/dish3"
            android:contentDescription="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="16pt"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/dish4ImgBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/text2"
            android:layout_toEndOf="@+id/dish3ImgBtn"
            android:layout_toRightOf="@+id/dish3ImgBtn"
            android:background="@drawable/dish4"
            android:contentDescription="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="16pt"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/dish5ImgBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/text3"
            android:layout_toEndOf="@+id/text2"
            android:layout_toRightOf="@+id/text2"
            android:background="@drawable/create"
            android:contentDescription="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="16pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/dish3ImgBtn"
            android:background="@color/Honeydew"
            android:gravity="center"
            android:text="@string/dish3" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/dish4ImgBtn"
            android:layout_toEndOf="@id/text4"
            android:layout_toRightOf="@id/text4"
            android:background="@color/Honeydew"
            android:gravity="center"
            android:text="@string/dish4" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/dish5ImgBtn"
            android:layout_toEndOf="@id/text5"
            android:layout_toRightOf="@id/text5"
            android:background="@color/Honeydew"
            android:gravity="center"
            android:text="@string/Create_your_own" />

        <TextView
            android:id="@+id/title"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_alignLeft="@+id/drinkImgBtn"
            android:layout_alignStart="@+id/drinkImgBtn"
            android:layout_alignTop="@+id/drinkImgBtn"
            android:background="@color/WhiteSmoke"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/button"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />


    </RelativeLayout>

    <Button
        android:id="@+id/cartBtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/shape"
        android:text="@string/goCart"
        android:textColor="@color/WhiteSmoke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/purchaseBtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="172dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="172dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/shape"
        android:text="@string/home"
        android:textColor="@color/WhiteSmoke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cartBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/quanup"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/right"
        android:visibility="invisible"
        android:textColor="@color/WhiteSmoke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/quandown"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="92dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/left"
        android:textColor="@color/WhiteSmoke"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/submit"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape"
        android:text="@string/submit"
        android:textColor="@color/WhiteSmoke"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <Button
        android:id="@+id/byosubmit"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape"
        android:text="@string/submit"
        android:textColor="@color/WhiteSmoke"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <TextView
        android:id="@+id/background"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/WhiteSmoke"
        android:gravity="top"
        android:text="@string/background"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/curQuan"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/WhiteSmoke"
        android:gravity="top"
        android:text="@string/start"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/description"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/WhiteSmoke"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/extra"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/WhiteSmoke"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/button"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/byosubmit"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/oops"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/oops"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <Spinner
        android:id="@+id/item1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/WhiteSmoke"
        android:text="@string/start"
        android:visibility="invisible"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285" />

    <Spinner
        android:id="@+id/item2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/WhiteSmoke"
        android:text="@string/start"
        android:visibility="invisible"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.292" />


</android.support.constraint.ConstraintLayout>
